<?xml version="1.0"?>
<dlna-profiles>
  <include ref="png.xml" />
  <dlna-profile name="PNG_TN" mime="image/png">
    <restriction type="image">
      <parent name="PNG" />

      <field name="height" type="int">
        <range min="1" max="160" />
      </field>
      <field name="width" type="int">
        <range min="1" max="160" />
      </field>
    </restriction>
  </dlna-profile>

  <dlna-profile name="PNG_LRG" mime="image/png">
    <restriction type="image">
      <parent name="PNG" />

      <field name="height" type="int">
        <range min="1" max="4096" />
      </field>
      <field name="width" type="int">
        <range min="1" max="4096" />
      </field>
      <field name="depth" type="int">
        <value>1</value>
        <value>2</value>
        <value>4</value>
        <value>8</value>
        <value>16</value>
        <value>24</value>
        <value>32</value>
      </field>
    </restriction>
  </dlna-profile>
</dlna-profiles>
